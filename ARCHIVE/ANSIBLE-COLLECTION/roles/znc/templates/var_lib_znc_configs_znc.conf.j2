Version = 1.8.2
<Listener l>
	Port = 6697
	IPv4 = true
	IPv6 = false
	SSL = true
</Listener>
{% for module in znc_modules %}
LoadModule = {{ module }}
{% endfor %}

{% for user in znc_users %}
<User {{ user.nickname }}>
	<Pass password>
		Method = sha256
		Hash = {{ (user.password + user.password_salt) | hash('sha256') }}
		Salt = {{ user.password_salt }}
	</Pass>
	Admin      = {{ 'true' if user.admin else 'false' }}
	Nick       = {{ user.nickname }}
	AltNick    = {{ user.nickname }}_
	RealName   = {{ user.nickname }}
	Ident      = {{ user.nickname }}
	LoadModule = controlpanel
	LoadModule = simple_away

{% for network in user.networks %}
	<Network {{ network.server }}>
		Server     = {{ network.server }} +{{ network.port }}
{% for channel in network.channels %}
		<Chan {{ channel }}>
		</Chan>
{% endfor %}
	</Network>
{% endfor %}
</User>
{% endfor %}
